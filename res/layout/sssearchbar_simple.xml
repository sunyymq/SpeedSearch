<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:gravity="center_vertical" 
    android:orientation="horizontal" 
    android:background="@drawable/bg_search_supermarket" 
    android:padding="8.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_alignParentTop="true"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:gravity="center_vertical" 
        android:id="@id/rL_search_content" 
        android:background="@drawable/bg_searchbar_supermarket" 
        android:padding="10.0dip" 
        android:focusable="true" 
        android:focusableInTouchMode="true" 
        android:layout_width="0.0dip" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0">
        <com.android.speedsearch.util.SpImageView 
            android:id="@id/img_search" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="3.0dip" 
            android:src="@drawable/icon_search" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <com.android.speedsearch.util.SpImageView 
            android:id="@id/img_cancel" 
            android:visibility="gone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="3.0dip" 
            android:src="@drawable/img_cancel_supermarket" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
        <AutoCompleteTextView 
            android:textSize="14.0dip" 
            android:textColor="@color/wcc_color_11" 
            android:ellipsize="end" 
            android:id="@id/input_keyword" 
            android:background="#00ffffff" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:hint="@string/pleaseinput" 
            android:maxLines="1" 
            android:scrollHorizontally="true" 
            android:singleLine="true" 
            android:maxLength="21" 
            android:completionThreshold="1" 
            android:layout_toLeftOf="@id/img_cancel" 
            android:layout_toRightOf="@id/img_search" 
            android:layout_centerVertical="true" 
            android:inputType="textUri" 
            android:imeOptions="actionSearch" />
    </RelativeLayout>
    <Button 
        android:textSize="16.0dip" 
        android:textColor="@color/wcc_color_10" 
        android:layout_gravity="right|center" 
        android:id="@id/btn_search" 
        android:background="@drawable/btn_common_search" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="10.0dip" 
        android:visibility="gone" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:layout_marginLeft="10.0dip" 
        android:text="@string/button_cancel" />
</LinearLayout>
